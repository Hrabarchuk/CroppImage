        xmlns:local="clr-namespace:MyGelleryExample"
        mc:Ignorable="d"
        Title="CroppingWindow" Height="489.089" Width="892.479">
    <Grid x:Name="RootGrid" Loaded="CroppingWindow_OnLoaded" MouseLeftButtonDown="RootGrid_OnMouseLeftButtonDown">
        <Canvas x:Name="CanvasPanel"
            Grid.Column="1">
            <Border Height="390" Width="782" Background="LightBlue">
                <Image x:Name = "SourceImage"
                   Stretch="Fill"/>

            </Border>


        </Canvas>
        <Button Content="Crop" HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
    </Grid>
